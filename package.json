{
  "name": "outclass",
  "version": "0.2.0",
  "description": "CSS class manipulation tool",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "files": [
    "lib"
  ],
  "scripts": {
    "dev": "jest --watchAll",
    "test": "jest",
    "build:clean": "rm -rf lib/*",
    "build:move": "tsc && mv lib/index.js lib/index.js",
    "build": "npm run build:clean && tsc && npm run build:move"
  },
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    }
  },
  "keywords": [
    "class",
    "atomic css",
    "utility-first css"
  ],
  "author": "chielorenz",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ]
  }
}
